@model IEnumerable<SATGroupProject.DATA.EF.StudentStatus>

@{
    ViewBag.Title = "Student Statuses";
}

<div class="container">
    <h2>@ViewBag.Title</h2>
    @if (User.IsInRole("Admin"))
    {
        <div class="row mb-1">
            <div class="col-md-2 text-left">
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SSName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SSDescription)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SSName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SSDescription)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("Edit", "StudentStatus", new { id = item.SSID })">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                        </a>
                        <a href="@Url.Action("Details", "StudentStatus", new { id = item.SSID })">
                            <i class="fa fa-info-circle" aria-hidden="true"></i>
                        </a>
                        <a href="@Url.Action("Delete", "StudentStatus", new { id = item.SSID })">
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                        </a>
                    }
                    else
                    {
                        //Commented this out because there is no additional information in the details view.
                        // @Html.ActionLink("Details", "Details", new { id = item.SSID })
                    }

                </td>
            </tr>
        }

    </table>
</div>