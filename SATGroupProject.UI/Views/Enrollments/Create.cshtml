@model SATGroupProject.DATA.EF.Enrollment

@{
    ViewBag.Title = "Enroll a student";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal detailsShape">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.StudentId, "Student", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("StudentId", null, "Please choose a student.", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.StudentId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ScheduledClass.CourseInformation, "Course Information", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("ScheduledClassId", null, "Please choose a class.", htmlAttributes: new { @class = "form-control" })
            @*@{ List<ScheduledClass.CourseInformation> name = new Model.ScheduledClass.CourseInformation.ToList()}*@
            @*@Html.DropDownList("ScheduledClassId", (Model.ScheduledClass.CourseInformation), htmlAttributes: new { @class = "form-control" })*@
            @*@Html.DropDownList("ScheduledClassId", new SelectList(Model.ScheduledClass.CourseInformation), htmlAttributes: new { @class = "form-control" })*@
            @Html.ValidationMessageFor(model => model.ScheduledClass.CourseInformation, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="col-md-offset-7 col-md-2">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
        <div class="col-md-2">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info" })
        </div>
    </div>


    @*<div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>*@
</div>
}

